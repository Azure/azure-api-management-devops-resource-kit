{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "APIMServiceName": {
            "type": "string"
        },
        "httpBinApiID": {
            "type": "string"
        },
        "starterProductID": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ApiManagement/service/apis",
            "name": "[concat(parameters('APIMServiceName'), '/', parameters('httpBinApiID'), ';rev=2')]",
            "apiVersion": "2018-01-01",
            "scale": null,
            "properties": {
                "contentFormat": "swagger-link-json",
                "contentValue": "https://raw.githubusercontent.com/Azure/azure-api-management-devops-example/master/example/http-bin-api/rev2/http-bin.openapi.json?token=AHwNf07bU3NZTOvu_BTjBchmrAXKivCiks5bFvUtwA%3D%3D",
                "path": "httpbin"
            }
        },
        {
            "type": "Microsoft.ApiManagement/service/apis/policies",
            "name": "[concat(parameters('APIMServiceName'), '/', parameters('httpBinApiID'), ';rev=2','/policy')]",
            "apiVersion": "2018-01-01",
            "properties": {
                "policyContent": "https://raw.githubusercontent.com/Azure/azure-api-management-devops-example/master/example/http-bin-api/rev2/http-bin.policy.xml?token=AHwNf-N9atuhRAXNlCmpP6Mss0kP3aQEks5bFvVGwA%3D%3D",
                "contentFormat": "rawxml-link"
            },
            "dependsOn": [
                "[concat(resourceId('Microsoft.ApiManagement/service/apis', parameters('APIMServiceName'), parameters('httpBinApiID')), ';rev=2')]"
            ]
        },
        {
            "type": "Microsoft.ApiManagement/service/apis/releases",
            "name": "[concat(parameters('APIMServiceName'), '/', parameters('httpBinApiID'), '/release2')]",
            "apiVersion": "2018-01-01",
            "scale": null,
            "properties": {
                "apiId": "[concat(resourceId('Microsoft.ApiManagement/service/apis', parameters('APIMServiceName'), parameters('httpBinApiID')), ';rev=2')]",
                "notes": "adding an API release"
            },
            "dependsOn": [
                "[concat(resourceId('Microsoft.ApiManagement/service/apis', parameters('APIMServiceName'), parameters('httpBinApiID')), ';rev=2', '/policy')]"
            ]
        }
    ]
}